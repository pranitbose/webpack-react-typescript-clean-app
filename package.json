{
    "name": "webpack-react-typescript-clean-app",
    "version": "0.1.0",
    "description": "Starter template for React + TypeScript app following clean architecture and bundled with Webpack",
    "private": true,
    "author": "Pranit Bose",
    "license": "MIT",
    "scripts": {
        "tsc:node": "tsc --project ./tsconfig.node.json",
        "clean": "npx rimraf build dist",
        "prepare": "npm run clean && npm run tsc:node",
        "dev": "npm run prepare && webpack serve --config ./build/webpack.dev.js",
        "build": "npm run prepare && webpack --config ./build/webpack.prod.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prettier": "prettier . --check",
        "prettier:fix": "prettier . --write",
        "test": "npm run tsc:node && jest --config ./build/jest.config.js"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^5.1.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.0.2",
        "@eslint/js": "^9.0.0",
        "@testing-library/dom": "^10.0.0",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^15.0.2",
        "@testing-library/user-event": "^14.5.2",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.12.7",
        "@types/react": "^18.2.78",
        "@types/react-dom": "^18.2.25",
        "@types/webpack-dev-server": "^4.7.2",
        "@typescript-eslint/eslint-plugin": "^7.7.0",
        "compression-webpack-plugin": "^11.1.0",
        "css-loader": "^7.1.1",
        "css-minimizer-webpack-plugin": "^6.0.0",
        "eslint": "^8.56.0",
        "eslint-config-love": "^47.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-deprecation": "^2.0.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jest": "^28.2.0",
        "eslint-plugin-jsdoc": "^48.2.3",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-sonarjs": "^0.25.1",
        "eslint-plugin-testing-library": "^6.2.2",
        "fork-ts-checker-webpack-plugin": "^9.0.2",
        "globals": "^15.0.0",
        "html-webpack-plugin": "^5.6.0",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.2.2",
        "mini-css-extract-plugin": "^2.8.1",
        "prettier": "^3.2.5",
        "sass": "^1.75.0",
        "sass-loader": "^14.2.0",
        "source-map-loader": "^5.0.0",
        "style-loader": "^4.0.0",
        "ts-jest": "^29.1.2",
        "ts-loader": "^9.5.1",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.7.0",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4",
        "webpack-merge": "^5.10.0"
    },
    "browserslist": [
        "> 0.2%",
        "last 2 versions",
        "Firefox ESR",
        "not dead"
    ],
    "lint-staged": {
        "**/*": [
            "npm run prettier:fix",
            "npm run lint",
            "npm run lint:fix",
            "git add ."
        ]
    }
}
